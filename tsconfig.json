{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/components/Header.tsx", "src/app/components/Breadcrumb.js", "src/app/shop/page.js", "src/app/components/SecondHeader.js", "src/app/components/Testimonial.js", "src/app/shop/[id]/page.js", "src/app/shop/[id]/page.tsx", "src/app/components/ContactForm.js", "src/app/api/contact/route.js", "src/app/components/CartItem.js", "src/redux/store.js", "src/redux/reducers/cartReducer.js", "src/app/components/RightSideDetailsPage.tsx", "src/app/components/CartSlideIn.js", "src/app/blog/[slug]/page.js", "src/app/contact/page.tsx", "src/app/api/sendemail.js", "src/app/api/sendemail/route.js", "src/app/user/page.js"],
  "exclude": ["node_modules"]
}
